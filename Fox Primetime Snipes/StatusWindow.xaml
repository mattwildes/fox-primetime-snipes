<Window x:Class="Fox_Primetime_Snipes.StatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fox_Primetime_Snipes"
        mc:Ignorable="d"
        Title="Rendering ..." Height="200" Width="400" ResizeMode="NoResize" Cursor="None">
    <Grid>
        <ProgressBar x:Name="renderBar" HorizontalAlignment="Left" Height="20" Margin="100,90,0,0" VerticalAlignment="Top" Width="200" Value="10" ValueChanged="RenderBar_ValueChanged"/>
        <Button x:Name="OpenFile" Content="Close" HorizontalAlignment="Left" Margin="155,130,0,0" VerticalAlignment="Top" Width="75" IsEnabled="False" Click="OpenFile_Click"/>

    </Grid>
</Window>
